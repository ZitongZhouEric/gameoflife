<h2> {{title}} playable, have a try</h2>

<div id="canvas-container">
	<canvas id="canvas"></canvas>
	<button id="runbtn">Run</button>
</div>



<div id="user-alive-rule-container">
	<form action="/" method="post">
		<label for="user-alive-rule">Enter your own rule</label>
		<textarea id="user-alive-rule" name="rule" placeholder="function(isAlive, left, right, up, down, topleft, topRight, downleft, downRight){
			let neighborsAlive = 0;
			for (let x of Array.from(arguments).slice(1)){
					if (x)
						neighborsAlive++;
			}
			return ((isAlive && (neighborsAlive === 2 || neighborsAlive === 3)) || neighborsAlive == 3);
		}"></textarea><br>
		<input id="sbmbut" type="submit" name="submit-button">
	</form>
</div>



